[user]
	name = hgsgtk
	email = hgsgtk@example.com

[core]
	editor = vim
	autocrlf = input
	safecrlf = true
	quotepath = false
	ignorecase = false
	precomposeunicode = true
	excludesfile = /Users/hgsgtk/.gitignore_global

[init]
	defaultBranch = main

[pull]
	rebase = false

[push]
	default = simple
	autoSetupRemote = true

[fetch]
	prune = true

[rebase]
	autoStash = true

[merge]
	tool = vimdiff
	conflictstyle = diff3

[diff]
	tool = vimdiff
	colorMoved = zebra

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[alias]
	st = status
	co = checkout
	sw = switch
	br = branch
	ci = commit
	see = browse
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	lg = log --oneline --decorate --graph --all
	lga = log --oneline --decorate --graph --all --stat
	uncommit = reset --soft HEAD~1
	amend = commit --amend --no-edit
	wipe = !git add -A && git commit -m 'WIP' && git reset HEAD~1 --hard
	cleanup = !git branch --merged | grep -v '\\*\\|main\\|develop' | xargs -n 1 git branch -d
	remotes = remote -v
	who = blame
	what = show
	when = log --pretty=format:'%h %ad %s' --date=short
	why = log --pretty=format:'%h %ad %an %s' --date=short
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all

[rerere]
	enabled = true

[help]
	autocorrect = 1

[credential]
	helper = osxkeychain

[ghq]
	root = ~/go/src

[hub]
	protocol = ssh

[url "https://github.com/"]
	insteadOf = git@github.com:

[url "https://"]
	insteadOf = git://
